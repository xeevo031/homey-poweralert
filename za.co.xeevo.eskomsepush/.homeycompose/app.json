{
  "id": "za.co.xeevo.eskomsepush",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Eskom Load Shedding"
  },
  "description": {
    "en": "Real time status for National Loadshedding"
  },
  "category": [
    "internet"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Neil Donnelly",
    "email": "neil@zafari.co.za"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "neildonnelly"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/yourusername/za.co.xeevo.eskomsepush/issues"
  },
  "source": "https://github.com/yourusername/za.co.xeevo.eskomsepush",
  "homepage": "https://xeevo.co.za",
  "support": "https://xeevo.co.za/support",
  "flow": {
    "triggers": [],
    "conditions": [],
    "actions": []
  },
  "api": {
    "checkApi": {
      "method": "post",
      "path": "/check-api"
    },
    "debugApi": {
      "method": "get",
      "path": "/debug-api"
    },
    "validateToken": {
      "method": "post",
      "path": "/validate-token"
    },
    "validateTokenOnly": {
      "method": "post",
      "path": "/validate-token-only"
    }
  },
  "settings": [
    {
      "id": "apiToken",
      "type": "text",
      "title": {
        "en": "EskomSePush API Token"
      },
      "hint": {
        "en": "Enter your EskomSePush API token. You can get one from https://eskomsepush.gumroad.com/l/api"
      },
      "value": ""
    }
  ]
}